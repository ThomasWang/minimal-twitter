{
  "name": "Minimal Theme for Twitter",
  "short_name": "Minimal Twitter",
  "description": "Declutter the Twitter web experience.",
  "version": "5.0.0",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "{e7476172-097c-4b77-b56e-f56a894adca9}"
    }
  },
  "icons": {
    "16": "images/MinimalTwitterIcon16.png",
    "32": "images/MinimalTwitterIcon32.png",
    "48": "images/MinimalTwitterIcon48.png",
    "128": "images/MinimalTwitterIcon128.png"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["content/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["https://twitter.com/*", "https://mobile.twitter.com/*"],
      "js": ["content/scripts/dist/main.js"]
    }
  ],
  "web_accessible_resources": ["content/main.css", "content/typefully.css"],
  "options_ui": {
    "page": "build/customize.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": {
      "16": "images/MinimalTwitterIcon16.png",
      "32": "images/MinimalTwitterIcon32.png",
      "48": "images/MinimalTwitterIcon48.png"
    },
    "default_title": "Minimal Twitter",
    "default_popup": "build/customize.html"
  }
}
