{
  "name": "Minimal Theme for Twitter",
  "short_name": "MinimalTwitter",
  "description": "Declutter your Twitter web experience.",
  "version": "4.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/MinimalTwitterIcon16.png",
    "32": "images/MinimalTwitterIcon32.png",
    "48": "images/MinimalTwitterIcon48.png",
    "128": "images/MinimalTwitterIcon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://twitter.com/*", "https://mobile.twitter.com/*"],
      "css": ["content/main.css"],
      "js": ["content/main.js"]
    }
  ],
  "options_ui": {
    "page": "customize.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": {
      "16": "images/MinimalTwitterIcon16.png",
      "32": "images/MinimalTwitterIcon32.png",
      "48": "images/MinimalTwitterIcon48.png"
    },
    "default_title": "Customize",
    "default_popup": "customize.html"
  }
}
